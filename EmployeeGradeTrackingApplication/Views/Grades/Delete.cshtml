@model EmployeeGradeTrackingApplication.Models.Grade
@{
    ViewBag.Title = "Delete";
}

<div class="row">
    <div class="col-12">
        <h3 class="display-2" style="background-color:teal; color:white; text-align:center; border:outset;">Are you sure to delete?</h3>
    </div>

    <div class="form-group row mb-1">
        @Html.LabelFor(x => x.GradeName, new { @class = "col-form-label col-form-label-sm col-2" })
        <div class="col-4">
            @Html.DisplayFor(x => x.GradeName)
        </div>
    </div>
    
    <div class="form-group row mb-1">

        @using (Html.BeginForm())
        {
            @Html.HiddenFor(x => x.GradeId)
            <div class="col-4 offset-2">
                <button type="submit" class="btn btn-danger">Confirm Delete</button>
            </div>
        }
    </div>
    <div class="col-12">

        @Html.ActionLink("Back to list", "Index")
    </div>
</div>


