@model EmployeeGradeTrackingApplication.Models.Grade
@using (Ajax.BeginForm("EditGrade", "Grades", new { }, new AjaxOptions
{
    HttpMethod = "Post",
    InsertionMode = InsertionMode.Replace,
    UpdateTargetId = "alert",
    LoadingElementId = "spinner",
    OnSuccess = "onSuccess"
}, new { id = "f" }))
{
    @Html.HiddenFor(x => x.GradeId)
<div class="form-group row mb-1">
    @Html.LabelFor(x => x.GradeName, new { @class = "col-form-label col-form-label-sm col-2" })
    <div class="col-4">
        @Html.TextBoxFor(x => x.GradeName, new { @class = "form-control form-control-sm" })
        @Html.ValidationMessageFor(x => x.GradeName, "", new { @class = "text-danger" })
    </div>
</div>

    <div class="form-group row mb-1">

        <div class="col-4 offset-2">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </div>
}

