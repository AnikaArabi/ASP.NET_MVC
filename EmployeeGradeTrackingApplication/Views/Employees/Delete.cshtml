@model EmployeeGradeTrackingApplication.Models.Employee
@{
    ViewBag.Title = "Delete";
}

<div class="row">
    <div class="col-12">
        <h3 class="display-2" style="background-color:teal; color:white; text-align:center; border:outset;">Are you sure to delete?</h3>
        

            @Html.HiddenFor(x => x.EmployeeId)
            <div class="form-group row mb-1">
                @Html.LabelFor(x => x.EmployeeName, new { @class = "col-form-label col-form-label-sm col-2" })
                <div class="col-4">
                    @Html.DisplayFor(x => x.EmployeeName)

                </div>
            </div>
            <div class="form-group row mb-1">
                @Html.LabelFor(x => x.JoiningDate, new { @class = "col-form-label col-form-label-sm col-2" })
                <div class="col-4">
                    @Html.DisplayFor(x => x.JoiningDate)

                </div>
            </div>

            <div class="form-group row mb-1">
                @Html.LabelFor(x => x.Email, new { @class = "col-form-label col-form-label-sm col-2" })
                <div class="col-4">
                    @Html.DisplayFor(x => x.Email)

                </div>
            </div>
            <div class="form-group row mb-1">
                @Html.LabelFor(x => x.Phone, new { @class = "col-form-label col-form-label-sm col-2" })
                <div class="col-4">
                    @Html.DisplayFor(x => x.Phone)

                </div>
            </div>
            <div class="form-group row mb-1">
                @Html.LabelFor(x => x.IsWorking, new { @class = "col-form-label col-form-label-sm col-2" })
                <div class="col-4">
                    @Html.DisplayFor(x => x.IsWorking)

                </div>
            </div>
            <div class="form-group row mb-1">
                @Html.LabelFor(x => x.Department, new { @class = "col-form-label col-form-label-sm col-2" })
                <div class="col-4">
                    @Html.DisplayFor(x => x.Department.DepartmentName)

                </div>
            </div>
            <div class="form-group row mb-1">
                @Html.LabelFor(x => x.Picture, new { @class = "col-form-label col-form-label-sm col-2" })
                <div class="col-4">
                    <img src="~/Uploads/@Model.Picture" class="img-thumbnail" style="width:50px" />

                </div>

            </div>

            @using (Html.BeginForm("Delete", "Employees", new { id = Model.EmployeeId }, FormMethod.Post))
            {

                <div class="col-4 offset-2">
                    <button type="submit" class="btn btn-danger">Confirm Delete</button>

                </div>
            }     

    </div>

</div>

