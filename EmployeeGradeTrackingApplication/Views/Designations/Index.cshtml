@model IEnumerable<EmployeeGradeTrackingApplication.Models.Designation>
@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-12">
        <h3 class="display-2" style="background-color:teal; color:white; text-align:center; border:outset;"> Designations</h3>
        <div class="d-flex justify-content-end mb-1">
            @Html.ActionLink("Add New", "Create", "Designations", new { }, new { @class = "btn btn-primary btn-sm" })
        </div>
        <table class="table table-striped table-bordered table-success">
            <thead class="bg-light">
                <tr>
                    <th>@Html.DisplayNameFor(x => x.DesignationId)</th>
                    <th>@Html.DisplayNameFor(x => x.DesignationName)</th>

                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var b in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(x => b.DesignationId)</td>
                        <td>@Html.DisplayFor(x => b.DesignationName)</td>

                        <td>
                            @Html.ActionLink("Edit", "Edit", "Designations", new { id = b.DesignationId }, new { @class = "btn btn-secondary btn-sm" })
                            <a href="@Url.Action("Delete", "Designations", new {id=b.DesignationId})" class="btn btn-danger btn-sm)">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

