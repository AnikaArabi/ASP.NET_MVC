@model EmployeeGradeTrackingApplication.Models.Department
@using (Ajax.BeginForm("CreateDepartment", "Departments", new { }, new AjaxOptions
{
    HttpMethod = "Post",
    InsertionMode = InsertionMode.Replace,
    UpdateTargetId = "alert",
    LoadingElementId="spinner",
    OnSuccess = "onSuccess"
}, new { id = "f" }))
{
    <div class="form-group row mb-1">
        @Html.LabelFor(x => x.DepartmentName, new { @class = "col-form-label col-form-label-sm col-2" })
        <div class="col-4">
            @Html.TextBoxFor(x => x.DepartmentName, new { @class = "form-control form-control-sm" })
            @Html.ValidationMessageFor(x => x.DepartmentName, "", new { @class = "text-danger" })
        </div>
    </div>
    
    <div class="form-group row mb-1">
       
        <div class="col-4 offset-2">
           <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </div>
}