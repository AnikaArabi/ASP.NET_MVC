@model IEnumerable<EmployeeGradeTrackingApplication.Models.Department>
@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-12">
        <h3 class="display-2" style="background-color:teal; color:white; text-align:center; border:outset;"> Departments</h3>
        <div class="d-flex justify-content-end mb-1">
            @Html.ActionLink("Add New", "Create", "Departments", new { }, new { @class = "btn btn-primary btn-sm" })
        </div>
        <table class="table table-striped table-bordered table-success">
            <thead class="bg-light">
                <tr>
                    <th>@Html.DisplayNameFor(x => x.DepartmentName)</th>
                    
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var b in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(x => b.DepartmentName)</td>
                        
                        <td>
                            @Html.ActionLink("Edit", "Edit", "Departments", new { id = b.DepartmentId }, new { @class = "btn btn-secondary btn-sm" })
                            <a href="@Url.Action("Delete", "Departments", new {id=b.DepartmentId})" class="btn btn-danger btn-sm @(b.Employee.Count > 0 ? "disabled" :"")">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

